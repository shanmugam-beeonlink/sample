{
    "family": "my-app-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "3072",
    "executionRoleArn": "arn:aws:iam::587054415775:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::587054415775:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "my-app",
            "image": "${IMAGE}",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "AWS_REGION",
                    "value": "${AWS_REGION}"
                },
                {
                    "name": "ECR_REPOSITORY",
                    "value": "${ECR_REPOSITORY}"
                },
                {
                    "name": "VPC_ID",
                    "value": "${VPC_ID}"
                },
                {
                    "name": "ALB_LISTENER_ARN",
                    "value": "${ALB_LISTENER_ARN}"
                },
                {
                    "name": "APP_PORT",
                    "value": "${APP_PORT}"
                },
                {
                    "name": "STAGING_SERVICE",
                    "value": "${STAGING_SERVICE}"
                },
                {
                    "name": "PRODUCTION_SERVICE",
                    "value": "${PRODUCTION_SERVICE}"
                },
                {
                    "name": "ECS_CLUSTER",
                    "value": "${ECS_CLUSTER}"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/my-app-task",
                    "awslogs-create-group": "true",
                    "awslogs-region": "${AWS_REGION}",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}